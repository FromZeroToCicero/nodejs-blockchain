  "main": "dev/server.js",
  "scripts": {
    "node_1": "nodemon --watch dev -e js dev/server.js 3001 http://localhost:3001",
    "node_2": "nodemon --watch dev -e js dev/server.js 3002 http://localhost:3002",
    "node_3": "nodemon --watch dev -e js dev/server.js 3003 http://localhost:3003",
    "node_4": "nodemon --watch dev -e js dev/server.js 3004 http://localhost:3004",
    "node_5": "nodemon --watch dev -e js dev/server.js 3005 http://localhost:3005",
